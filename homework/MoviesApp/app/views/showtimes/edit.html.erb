<h1>Editing Showtime #<%= @showtime.id %></h1>

<%= form_tag(showtime_url(@showtime), method: 'put') do %>

  <div>
    <%= label_tag :movie_id %><br />
    <%= select_tag :movie_id, options_from_collection_for_select(Movie.order('title asc'), :id,  :title, @showtime.movie_id) %>
  </div>

  <div>
    <%= label_tag :theater_id %><br />
    <%= select_tag :theater_id, options_from_collection_for_select(Theater.order('name asc'), :id, :name, @showtime.theater_id) %>
  </div>

  <div>
    <%= label_tag :screen_time %><br />
    <%= text_field_tag :screen_time, @showtime.screen_time %>
  </div>


  <div>
    <%= submit_tag "Update Showtime" %>
  </div>

<% end %>
